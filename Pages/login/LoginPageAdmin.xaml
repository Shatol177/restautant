<Page x:Class="Restaurant.Pages.login.LoginPageAdmin"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Restaurant.Pages.login"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPageAdmin">

    <Grid>
        <Border Grid.Column="1" BorderBrush="White"  BorderThickness="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Height="150" Width="200" Margin="10">
                <TextBlock HorizontalAlignment="Center" >Login</TextBlock>
                <TextBox Margin="0,3,0,10" x:Name="LoginTextBox"></TextBox>
                <TextBlock HorizontalAlignment="Center" >Password</TextBlock>
                <TextBox Margin="0,3,0,10" x:Name="PasswordTextBox"></TextBox>
                <Button Click="Registration">регистрация</Button>
                <Button Click="Login" Content="Войти"/>

            </StackPanel>
        </Border>
    </Grid>
</Page>
